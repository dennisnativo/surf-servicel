{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "./dist",
    "module": "commonjs",
    "target": "ESNext",
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".vscode"
  ]
}
